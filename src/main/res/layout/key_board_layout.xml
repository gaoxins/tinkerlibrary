<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_kb_keyboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_beyboard"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:layout_weight="1"
        android:background="@drawable/icon_beyboard"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_kb_keyboard_nK_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:text="1"
                android:textSize="@dimen/text_size_36sp" />

            <Button
                android:id="@+id/btn_kb_keyboard_nK_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:text="2"
                android:textSize="@dimen/text_size_36sp" />

            <Button
                android:id="@+id/btn_kb_keyboard_nK_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:text="3"
                android:textSize="@dimen/text_size_36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_kb_keyboard_nK_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:text="4"
                android:textSize="@dimen/text_size_36sp" />

            <Button
                android:id="@+id/btn_kb_keyboard_nK_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:text="5"

                android:textSize="@dimen/text_size_36sp" />

            <Button
                android:id="@+id/btn_kb_keyboard_nK_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"

                android:text="6"
                android:textSize="@dimen/text_size_36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_kb_keyboard_nK_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:text="7"
                android:textSize="@dimen/text_size_36sp" />

            <Button
                android:id="@+id/btn_kb_keyboard_nK_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:text="8"
                android:textSize="@dimen/text_size_36sp" />

            <Button
                android:id="@+id/btn_kb_keyboard_nK_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:text="9"
                android:textSize="@dimen/text_size_36sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_kb_keyboard_nK_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:text="0"
                android:textSize="@dimen/text_size_36sp" />

            <Button
                android:id="@+id/btn_kb_keyboard_nK_dian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:gravity="center"
                android:text="."
                android:textSize="@dimen/text_size_36sp" />

            <Button
                android:id="@+id/btn_kb_keyboard_nK_00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:text="00"
                android:textSize="@dimen/text_size_36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_kb_keyboard_nK_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:text="10"
                android:textSize="@dimen/text_size_36sp" />

            <Button
                android:id="@+id/btn_kb_keyboard_nK_50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:gravity="center"
                android:text="50"
                android:textSize="@dimen/text_size_36sp" />

            <Button
                android:id="@+id/btn_kb_keyboard_nK_100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:text="100"
                android:textSize="@dimen/text_size_36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_kb_keyboard_nK_500"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:text="500"
                android:textSize="@dimen/text_size_36sp" />

            <Button
                android:id="@+id/btn_kb_keyboard_nK_1000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:gravity="center"
                android:text="1000"
                android:textSize="@dimen/text_size_36sp" />

            <Button
                android:id="@+id/btn_kb_keyboard_nK_2000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/keyboard_selector"
                android:text="2000"
                android:textSize="@dimen/text_size_36sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>